<%= render 'list', books: @books %>
 <div class="container">
  <div class="row">  
 <h1>Books</h1>

 
<table class="table table-striped">
<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>
    
    <p><%= book.user.name %></p>
    
    <%= link_to  book_path(book.id) do %>
  <p><%= @book.title %></p>
    <% end %>
  
    <p><%= book.body %></p>
  </div>
<% end %>
</table>
 </div>  
</div>