<div class="col-lg-4" >

<h1>User info</h1>
<div>

 <%= image_tag user.get_profile_image(100,100) %>
 <p>name</p>
  <p><%= current_user.name %></p>
  <p>introduction</p>
  <p><%= current_user.introduction %></p>
    <p><%= link_to "Edit", edit_user_path(current_user.id) %></p>
  </div>

<h1>New book</h1>
<%= form_with model: Book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
  </div>
