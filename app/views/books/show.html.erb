<%= render 'list', books: @books %>
<h1>Book detail</h1>
<div>
  <%= image_tag @book.get_image %>
  
  <p><!--%= link_to  user_path(user.id) do %-->
  <%= @book.user.name %></p>
  <!--% end %-->
  
  <p><%= link_to  book_path(@book.id) do %>
  <%= @book.title %></p>
  <% end %>
  
  <p><%= @book.body %></p>
  <% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>