<div class="container px-5 px-sm-0">
  <div class="row">  
  
  <div class="col-md-3" >
<%= render 'list', book: @book, user: @user %>
</div>
<div class="col-md-8 offset-md-1" >
<h1>Book detail</h1>
<table class="table table-striped">
 <tbody>
    <tr>
    <td><%= link_to user_path(@user.id) do %>
      <%= image_tag @book.user.get_profile_image(80,80) %>
      <br><%= @book.user.name %>
    <% end %></tb>
  
  <td><%= link_to "#{ @book.title }", book_path(@book.id)  %></td>
  
  <td><%= @book.body %></td>
  
  <% if @book.user == current_user %>
  <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success edit_book_75164" %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger destroy_book_75164" %></td>
  <% end %>
 </tr>
    </tbody>
    </table>
    </div>  
</div>
</div>